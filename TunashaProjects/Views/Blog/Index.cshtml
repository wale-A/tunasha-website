@model IEnumerable<TunashaProjects.Models.Post>
@using TunashaProjects.Models;

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <p class="panel-title lead">@Html.ActionLink(item.Title, "Details", new { id = item.PostID }) </p>
        </div>
        <div class="panel-body">
            <p>@item.MiniContent</p>
        </div>
        <div class="panel-footer">
            <p class="text-muted">@item.PostedBy.Name - @item.Date</p>
        </div>
    </div>
}

